 <div id="genre_all">
  <div class="col-sm-3">
    <h5 class="text-center" style="background-color: #d3d3d3;">ジャンル一覧・追加</h5>
  </div>
    <%= form_with model: genre, url: admin_genres_path, local: false do |f| %>
      <div class="form_group row  my-4">
        <%= f.label :name, "ジャンル名", class: "col-sm-2 mb-0" %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </div>
      <div class="form_group row">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>

  <table class='table'>
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genres| %>
        <tr>
          <td><%= genres.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genres), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>