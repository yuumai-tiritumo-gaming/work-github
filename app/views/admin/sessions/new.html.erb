<div class="row">
  <div class="col-sm-3">
    <h3 class="text-center" style="background-color: #d3d3d3;">管理者ログイン</h3>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row justify-content-center my-3">
    <%= f.label :email, "メールアドレス", class: "col-sm-3" %>
    <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, class: "form-control col-sm-4" %>
  </div>
  <div class="field row justify-content-center mb-3">
    <%= f.label :password, "パスワード", class: "col-sm-3"%>
    <%= f.password_field :password, class: "form-control col-sm-4" %>
  </div>
  <div class="actions text-center">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>
