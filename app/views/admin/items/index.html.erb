<div class = "container">
  <div class = "row m-3">
    <div class = "col-sm-10">
      <h3>商品一覧</h3>
    </div>
    <div class = "col-2">
      <%= link_to new_admin_item_path, class: 'shadow btn btn-light rounded-circle p-0', style: "width:3rem;height:3rem;" do %>
       <p style= "margin-bottom: 10px;font-size: 30px;" >+</p>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <table class='table table-hover table-inverse table-borderless'>
        <thead>
          <tr class="table-active">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr class = "b-0">
              <td><%= item.id %></td>
              <td><%= link_to item.name,admin_item_path(item.id) %></td>
              <td><%= item.non_tax_price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_selling == true %>
                  <p class = "text-success">販売中</p>
                <% else %>
                  <p class = "text-black-50">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @items %>
</div>
