<div class = "row">
  <div class = "col-sm-3">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>商品新規登録</b></h3>
  </div>
</div>
<div class = "row justify-content-center">
  <div class = "col-sm-8">
    <%= form_with model: @item,url: admin_items_path, local:true do |f| %>
    <div class = "row py-1">
      <div class = "col-3">
        <%= f.label :item_image, "商品画像" %>
      </div>
      <div class = "col-6 pr-0">
        <%= f.file_field :item_image, accept: "image/*" %>
      </div>
    </div>
    <div class = "row py-1">
      <div class = "col-3">
        <%= f.label :name, "商品名" %>
      </div>
      <div class = "col-6 pr-0">
        <%= f.text_field :name, placeholder: "商品名", class: 'form-control' %>
      </div>
    </div>
    <div class = "row py-1">
      <div class = "col-3">
        <%= f.label :body, "商品説明" %>
      </div>
      <div class = "col-6 pr-0">
        <%= f.text_area :body, placeholder: "ここに説明文を記述します", class: 'form-control',style: "height: calc( 1.3em * 8 );line-height: 1.3;" %>
      </div>
    </div>
    <div class = "row py-1">
      <div class = "col-3">
        <%= f.label :genre_id, "ジャンル" %>
      </div>
      <div class = "col-6 pr-0">
        <%= f.collection_select :genre_id, @genre, :id, :name, include_blank: "--選択して下さい--", class: 'form-control' %>
      </div>
    </div>
    <div class = "row py-1">
      <div class = "col-3">
        <%= f.label :non_tax_price, "税抜価格" %>
      </div>
      <div class = "col-6 pr-0">
        <%= f.text_field :non_tax_price, placeholder: "1000", class: 'form-control' %>
      </div>
      <div class = "col-1 pl-1 pt-2">
        円
      </div>
    </div>
    <div class = "row py-1">
      <div class = "col-3">
        <p>販売ステータス</p>
      </div>
      <div class = "col-6">
        <%= f.radio_button :is_selling, "true" %>
        <%= f.label :is_selling, "販売中" %>
        <%= f.radio_button :is_selling, "false" %>
        <%= f.label :is_selling, "販売停止中" %>
      </div>
    </div>
    <div class = "row py-1">
      <div class = "col-3">
      </div>
      <div class = "col-6">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
<% end %>
 </div>
</div>