<div class = "row">
  <div class = "col-sm-3 px-5 pb-3 ">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>ログイン</b></h3>
  </div>
</div>
<div class = "row">
  <div class = "col-sm-4 pb-2 ml-5">
    <h5 class ="text-center mx-0" style="background-color: #d3d3d3;"><b>会員の方はこちらからログイン</b></h5>
  </div>
</div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row g-3 justify-content-center">
        <%= f.label :email, "メールアドレス", class: "col-2" %>
        <%= f.email_field :email, placeholder: "sample@example.com", class: "form-control col-sm-4" %>
    </div>
    <div class="row g-3 justify-content-center my-2">
        <%= f.label :password, "パスワード", class: "col-2" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control col-sm-4" %>
    </div>
    <div class="row g-3 justify-content-center my-2">
        <div class ="col-2"></div>
        <%= f.submit "ログイン",class: "btn btn-sm btn-primary form-control col-sm-2 col-7 " %>
        <div class ="col-2"></div>
    </div>
    <% end %>
  <div class = "row mt-5">
    <div class = "col-sm-4 px-5 ml-5">
      <h5 class ="text-center mx-0" style="background-color: #d3d3d3;"><b>会員登録がお済みでない方</b></h5>
    </div>
      <div class = "col-sm-10 text-center">
        <%= render "public/shared/links" %><span>から新規登録を行ってください</span>
      </div>
  </div>
  </div>
