<div class='container'>

  <div class = "col-sm-3 px-5 pb-5 ">
    <h3 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>ログイン</b></h3>
  </div>
  <div class = "col-sm-5 px-5 pb-5 ">
    <h5 class ="text-center mx-1" style="background-color: #d3d3d3;"><b>会員の方はこちらからログイン</b></h5>
  </div>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row g-3 align-items-center">
      <div class="col-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-1">

      </div>
      <div class="col-3">
        <%= f.email_field :email, placeholder: "sample@example.com", class: "email form-control" %>
      </div>
      </div>
    <div class="row g-3 align-items-center">
      <div class="col-3">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-1">

      </div>
      <div class="col-3">
        <%= f.password_field :password, autocomplete: "off", class: "password form-control" %>
      </div>
    </div>
    <div class="row g-3 align-items-center">
      <div class="col-4">

      </div>
      <div class="actions col-3">
        <%= f.submit "ログイン",class: 'btn btn-sm btn-primary  form-control' %>
      </div>
    </div>
    <% end %>
  <div>
  <h3>会員登録がお済みでない方</h3>
  <%= render "public/shared/links" %><span>から新規登録を行ってください</span>
  </div>
</div>