<div class="row">
  <div class="col-sm-3 d-flex justify-content-center mb-3">
    <h3 class = "bg-light" style="background-color: #d3d3d3;"><b>会員情報編集</b></h3>
  </div>
</div>

  <div class='row'>
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <%= render "public/shared/error_messages", resource: @customer %>
    </div>
    <div class="col-sm-4"></div>
  </div>

<%= form_with model: @customer, url: public_customers_path, local:true do |f| %>
  <div class="row">
    <%= f.label :family_name, "氏名", class: "col-sm-2 mx-3 my-1" %>
    <%= f.text_field :family_name, class: "col-sm-2 mx-3 my-1 form-control" %>
    <%= f.text_field :first_name, class: "col-sm-2 mx-3 my-1 form-control" %>
    <div class="col-sm-6"></div>
  </div>
  <div class="row">
    <%= f.label :family_kana, "フリガナ", class: "col-sm-2 mx-3 my-1 " %>
    <%= f.text_field :family_kana, class: "col-sm-2 mx-3 my-1 form-control" %>
    <%= f.text_field :first_kana, class: "col-sm-2 mx-3 my-1 form-control" %>
    <div class="col-sm-6"></div>
  </div>
  <div class="row">
    <%= f.label :postal_code, "郵便番号", class: "col-sm-2 mx-3 my-1" %>
    <%= f.text_field :postal_code, class: "col-sm-2 mx-3 my-1 form-control" %>
    <div class="col-sm-8"></div>
  </div>
  <div class="row">
    <%= f.label :address, "住所", class: "col-sm-2 mx-3 my-1" %>
    <%= f.text_field :address, class: "col-sm-5 mx-3 my-1 form-control" %>
    <div class="col-sm-5"></div>
  </div>
  <div class="row">
    <%= f.label :phone_number, "電話番号", class: "col-sm-2 mx-3 my-1" %>
    <%= f.text_field :phone_number, class: "col-sm-2 mx-3 my-1 form-control" %>
    <div class="col-sm-8"></div>
  </div>
  <div class="row">
    <%= f.label :email, "メールアドレス", class: "col-sm-2 mx-3 my-1" %>
    <%= f.text_field :email, class: "col-sm-2 mx-3 my-1 form-control" %>
    <div class="col-sm-8"></div>
  </div>
  <div class="row">
    <div class="col-sm-2 mx-3 my-1"></div>
    <%= f.submit "変更内容を保存", class: "btn btn-success col-sm-2 mx-3 my-1 ml-2" %>
    <div class="col-sm-2"><%= link_to public_customer_confirmation_path, class: "btn btn-danger mx-3 my-1" do %>
      退会する
    <% end %></div>
  </div>
<% end %>