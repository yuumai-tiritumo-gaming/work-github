マイページ
<table>
  <tbody>
    <tr>
      <td>
        <h5>登録情報</h5>
      </td>
      <td>
        <%= link_to edit_public_customers_path, class: "btn btn-success" do %>
          編集する
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<table class="table table-bordered">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.family_name %>　<%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.family_kana %>　<%= @customer.first_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <td>
        <h5>配送先</h5>
      </td>
      <td>
        <%= link_to public_addresses_path, class: "btn btn-primary" do %>
          一覧を見る
        <% end %>
      </td>
    </tr>
    <tr>
      <td><h5>注文履歴</h5></td>
      <td>
        <%= link_to public_orders_path, class: "btn btn-primary" do %>
          一覧を見る
        <% end %>
      </td>
    </tr>
  </tbody>
</table>