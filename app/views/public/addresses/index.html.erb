<h3>配送先登録/一覧</h3>
<%= flash[:notice] %>
<%= form_with model: @address, url: public_addresses_path, method: :post, local:true do |f| %>
 <div class="field">
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <label>宛名</label>
    <%= f.text_field :name %>
  </div>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <div class="field">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<table class="table table-bordered">
  <tbody>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to edit_public_address_path(address), class: "btn btn-success" do %>
          編集する
        <% end %>
        <%= link_to public_address_path(address), class: "btn btn-danger", method: :delete do %>
          削除する
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
