<div class='container'>
  <h1>新規会員登録</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      名前
    </div>
    <div class="col-1">
  <%= render "public/shared/error_messages", resource: resource %>
      (姓)
    </div>
    <div class="col-3">
      <%= f.text_field :family_name, autofocus: true, placeholder: "令和", class: "family_name" %>
    </div>
    <div class="col-1">
      (名)
    </div>
    <div class="col-3">
      <%= f.text_field :first_name, placeholder: "道子", class: "first_name" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-1">
      (セイ)
    </div>
    <div class="col-3">
      <%= f.text_field :family_kana, placeholder: "レイワ", class: "family_kana" %>
    </div>
    <div class="col-1">
      (メイ)
    </div>
    <div class="col-3">
      <%= f.text_field :first_kana, placeholder: "ミチコ", class: "first_kana" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
    <%= f.email_field :email, placeholder: "sample@example.com", class: "email" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
    <%= f.text_field :postal_code, placeholder: "0000000", class: "postal_code" %>
    </div>
  </div>


  <div class="row g-3 align-items-center">
    <div class="col-3">
      住所
    </div>
    <div class="col-1">

    </div>
    <div class="col-7">
    <%= f.text_field :address, :size=>"72", placeholder: "東京都渋谷区代々木神園町0-0", class: "address" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      電話番号
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
    <%= f.text_field :phone_number, placeholder: "000000000000", class: "phone_number" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      パスワード(6文字以上)
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
    <%= f.password_field :password, autocomplete: "off", class: "password" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">
      パスワード(確認用)
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
    </div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-3">

    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
      <%= f.submit "Sign up" ,class: 'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>
  <h1>既に登録済みの方</h1>
  <%= render "public/shared/links" %><span>からログインしてください</span>
</div>