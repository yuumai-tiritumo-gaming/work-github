<div class = "row">
    <div class = "col-sm-3">
    <table frame = "box">
      <thead>
        <tr>
          <th class = "col-sm-1 text-center" style="border: 1px solid black;">ジャンル一覧</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genres| %>
        <tr>
          <td class = "col-sm-1"><%= genres.name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
    <div class = "col-sm-9">

      <div class = "row">
        <div class = "col-sm-4">
        <% if @item.item_image.attached? %>
          <%= image_tag @item.item_image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
          </%>
        <% end %>
        </div>
        <div class = "col-sm-5">
          <h3><%= @item.name %></h3>
          <p><%= @item.body %></p>
          <h3>￥<%= with_tax_price(@item.non_tax_price) %><sapn class = "h6">(税込)</sapn></h3>
          <% if @item.is_selling == true %>
            <b class = "text-success">販売中</b>
              <%= form_with model: @cart_item, url: public_cart_items_path, local:true do |f| %>
              <% if customer_signed_in? %>
                <%= f.hidden_field :customer_id, :value => 2 %>
              <% end %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.select :quantity, *[1..10], include_blank: "個数選択"  %>
                <%= f.submit "カートに入れる", class: "btn btn-success"%>
              <% end %>
          <% else %>
            <b class = "text-black-50">販売停止中</b>
          <% end %>
        </div>
      </div>
    </div>
  </div>
